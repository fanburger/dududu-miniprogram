/* pages/book-info/bookinfo.wxss */
.info-left {
  flex: 1;
}

.cover {
  width: 100%;
  height: 556rpx;
  overflow: hidden;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  background: #f7f7f7;
  box-shadow: -10rpx -20rpx 40rpx 0rpx #edc34e;
}

.info-right {
  flex: 1;
}

.rate {
  width: 340rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
  border-radius: 100rpx 0rpx, 0rpx, 100rpx;
  background: #000000;
  box-shadow: inset 16rpx -6rpx 20rpx 0rpx #ffffff;
}

.write-comment {
  width: 80%;
  margin-left: auto;
}

.book-name {
  width: 270rpx;
  height: 104rpx;
  border-top-right-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
  background: #edc34e;
  box-shadow: 2rpx 6rpx 8rpx 0rpx #000000;
  font-size: medium;
  font-weight: bold;
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  align-self: start;
}

.ml-auto {
  margin-left: auto;
}

.mr-auto {
  margin-right: auto;
}

.intro {
  width: 290rpx;
  height: 658rpx;
  opacity: 1;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background: #fcfcfc;
  box-shadow: 10rpx 20rpx 40rpx 0rpx #edc34e;
  padding: 16rpx;
  box-sizing: border-box;
}
