/* pages/me/me.wxss */
.bg-block {
  position: relative;
  top: 0;
  width: 100%;
  height: 15vh;
  background-color: #edc34e;
}

.personal-card {
  top: -50rpx;
  width: 90%;
  height: 300rpx;
  background-color: white;
  box-shadow: 0 6rpx 8rpx rgba(0, 0, 0, 0.2);
}

.avatar {
  position: relative;
  display: flex;
  align-items: flex-end;
  gap: 24rpx;
  top: -50rpx;
  left: 50rpx;
}

.avatar-img{
  width: 180rpx;
}

.username {
  left: 200rpx;
  top: 116rpx;
  font-size: large;
  font-weight: bold;
}

.v-data{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-info-text{
  color: rgb(140, 145, 154);
  font-size: small;
}

.content-block{
  top: 300rpx;
}

.book-con{
  padding-bottom: 4vh;
}

.book-card{
  height: 100%;
  box-shadow: 0 4rpx 22rpx #E6AE17;
}

.book-card-text{
  font-size: small;
}

.book-card-image{
  height: 320rpx;
  width: 95%;
}

.book-card-bottom{
  justify-content: space-between;
}