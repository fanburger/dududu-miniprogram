.login-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #232323;
}

.title {
  font-size: 120rpx;
  font-weight: 600;
}

.slogan {
  padding: 0 10vw;
  font-size: 1.2rem;
  line-height: 66rpx;
  color: white;
  text-indent: 2rem;
}

.signature {
  color: white;
  font-size: 1.2rem;
  margin-left: auto;
  margin-right: 10vw;
  margin-top: 10rpx;
}

.login-btn {
  margin-top: 84rpx;
  font-size: large;
  font-weight: bold;
  letter-spacing: 0.5rem;
  width: 80vw;
}
